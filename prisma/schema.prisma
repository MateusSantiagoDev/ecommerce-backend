generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique

  name     String
  cpf      String
  email    String
  contato  Int
  role     String
  password String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Empresa {
  id String @id @unique

  name         String
  cnpj         String
  endereco     String
  cep          String
  contato      String
  email        String
  funcionarios String[]
  produtos     String[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("empresa")
}
